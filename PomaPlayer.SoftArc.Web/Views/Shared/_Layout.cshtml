@using PomaPlayer.SoftArc.Web.Controllers;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PomaPlayer</title>
    <link href="~/lib/normalize/normalize.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PomaPlayer.SoftArc.Web.styles.css" asp-append-version="true" />

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jqueryui/jquery-ui.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @Html.ActionLink("Главная", nameof(HomeController.Index), HomeController.Home, null, new { @class = "navbar-brand"})
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @Html.ActionLink("Список центров", nameof(ManageController.GetListCenters), ManageController.Manage, null, new { @class = "nav-link text-dark"})
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Список трениров", nameof(ManageController.GetListTrainers), ManageController.Manage, null, new { @class = "nav-link text-dark"})
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Список клиентов", nameof(ManageController.GetListCustomer), ManageController.Manage, null, new { @class = "nav-link text-dark"})
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container m-auto" style="width:80%;">
        @RenderBody()
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - PomaPlayer - @Html.ActionLink("Главная", nameof(HomeController.Index), HomeController.Home)
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
