@using PomaPlayer.SoftArc.Components.ViewModels;

@model TextEditViewModel

<div class="form-group mb-3 form-element @(Model.DivClass ?? string.Empty)" style="@(Model.HideRow ? "display:none;" : string.Empty)">
    @if (Model.LabelShow && Model.Label != null)
    {
        @Model.Label
    }
    @if (Model.Hidden != null)
    {
        @Model.Hidden
    }
    @if (Model.TextBox != null)
    {
        @Model.TextBox
    }
    @if (!string.IsNullOrEmpty(Model.InfoText))
    {
        <div class="form-text">
            <p>@Model.InfoText</p>
        </div>
    }
    @if (Model.ValidationMessage != null)
    {
        <div class="text-danger">
            @Model.ValidationMessage
        </div>
    }
</div>